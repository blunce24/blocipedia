%h1
  All Wikis

.row
  .col-md-8
    - @wikis.each do |wiki|
      .media
        .media-body
          %h4.media-heading
            = link_to wiki.title, wiki
          %small
            submitted #{time_ago_in_words(wiki.created_at)} ago by #{wiki.user.email}

  .col-md-4
    = link_to "New Wiki", new_wiki_path, class: 'btn btn-success'
