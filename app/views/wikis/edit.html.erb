<h1>Edit Wiki</h1>

<div class="row">
  <%= form_for @wiki do |wiki| %>
    <div class="form-group">
      <%= wiki.label :title %>
      <%= wiki.text_field :title, class: 'form-control', placeholder: 'Enter Wiki Title' %>
    </div>
    <div class="form-group">
      <%= wiki.label :body %>
      <%= md_simple_editor do %>
        <%= wiki.text_area :body, class: 'form-control', placeholder: 'Enter Wiki information here' %>
      <% end %>
    </div>
    <% if current_user.admin? || current_user.premium? %>
      <div class="form-group">
        <%= wiki.label :private, class: 'checkbox' do %>
          <%= wiki.check_box :private %> Private topic
        <% end %>
      </div>
    <% end %>
    <%= wiki.submit "Save", class: 'btn btn-success' %>
    <% end %>
</div>

<div>
  <%= render partial: 'collaborators/collaborator_form', locals: { wiki: @wiki } %>
</div>
